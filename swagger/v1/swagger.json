                "did": {
                  "type": "string"
                },
                "seed": {
                  "type": "string"
                },
                "verkey": {
                  "type": "string"
                }
              },
              "required": [
                "did",
                "seed",
                "verkey"
              ]
            }
          }
        }
      }
    }
  },
